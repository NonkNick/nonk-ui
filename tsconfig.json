{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "nonk-ui": ["src"],
      "nonk-ui/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],       // keep Vite types
    "skipLibCheck": true            // âœ… ignore types in node_modules to prevent errors
  },
  "include": [
    "src/**/*",
    "playground/**/*",
    "vite.config.ts"
  ]
}
